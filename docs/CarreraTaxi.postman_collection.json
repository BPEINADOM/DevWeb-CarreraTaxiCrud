  "item": [
    {
      "name": "CARRERAS",
      "item": [
        {
          "name": "Solicitar carrera",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "http://localhost:3000/api/carreras",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"cliente\": { \"id\": \"C123\", \"nombre\": \"Juan\" },\n  \"taxi\": { \"placa\": \"TXL123\", \"modelo\": \"Kia\" },\n  \"taxista\": { \"id\": \"T55\", \"nombre\": \"Carlos\" },\n  \"origen\": \"Chapinero\",\n  \"destino\": \"Usaquén\",\n  \"cantidadPasajeros\": 2\n}"
            }
          }
        },
        {
          "name": "Listar carreras",
          "request": {
            "method": "GET",
            "url": "http://localhost:3000/api/carreras"
          }
        },
        {
          "name": "Obtener carrera por ID",
          "request": {
            "method": "GET",
            "url": "http://localhost:3000/api/carreras/:id"
          }
        },
        {
          "name": "Iniciar carrera",
          "request": {
            "method": "PUT",
            "url": "http://localhost:3000/api/carreras/:id/iniciar"
          }
        },
        {
          "name": "Finalizar carrera",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "http://localhost:3000/api/carreras/:id/finalizar",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"precio\": null,\n  \"kilometros\": 12,\n  \"duracionMinutos\": 25\n}"
            }
          }
        },
        {
          "name": "Cancelar carrera",
          "request": {
            "method": "PUT",
            "url": "http://localhost:3000/api/carreras/:id/cancelar"
          }
        }
      ]
    },

